#! /usr/bin/env ruby

require 'colorize'

def status
  if File.exist?("online")
    puts "your status:   ".white + "online\n".green
  else
    puts "your status:   ".white + "offline\n".red
  end

  puts "friends:"
  puts "  matt(35)     ".white + "online".green
  puts "  joel(2)      ".white + "offline".red
  puts "  adam(19)     ".white + "offline".red
  puts "  spencer(3)  ".white + "offline".red
end

if ARGV[0] == "up"
  File.write('online', 'yep')
  status
end

if ARGV[0] == "down"
  if File.exists?("online")
    File.delete('online')
  end
  status
end

if ARGV == %w(go matt)
  puts "calling matt..."
  sleep 1.5
  puts "  ringing"
  sleep 1.9
  puts "  ringing"
  sleep 1.9
  puts "  ringing"
  sleep 0.5
  puts "  connected."
  sleep 0.4
  puts "  happy pairing!"
end

if ARGV.empty?
  status
end
